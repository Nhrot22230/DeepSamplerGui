{
    // Otras configuraciones recomendadas (por ejemplo, para formateo al guardar)
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true,
    // Flake8
    "flake8.args": [
        "--config",
        "${workspaceFolder}/configs/.flake8"
    ],
    // Isort: Indica a isort que busque el archivo de configuraci√≥n dentro de la carpeta "configs"
    "isort.args": [
        "--sp",
        "${workspaceFolder}/configs"
    ]
}